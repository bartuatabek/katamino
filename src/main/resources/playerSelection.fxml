            <RowConstraints maxHeight="32.0" minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Spinner fx:id="spinner" prefHeight="40.0" prefWidth="468.0" styleClass="split-arrows-horizontal" GridPane.columnIndex="1" />
            <Label fx:id="errorLabel" prefHeight="16.0" prefWidth="286.0" textFill="#f80808" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="playerNameField" prefHeight="40.0" prefWidth="374.0" promptText="Enter Player Name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <KataminoPlayerAddButton maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#createButtonClicked" scaleX="0.5" scaleY="0.5" GridPane.columnIndex="2" GridPane.rowIndex="2" />
